{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["plugin:vue/essential", "@vue/standard"],
  "rules": {
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
      "javascript",
      {
        "language": "html",
        "autoFix": true
      },
      {
        "language": "vue",
        "autoFix": true
      }
    ]
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
